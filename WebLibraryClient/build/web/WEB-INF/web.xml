<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>showBooksFromREST</servlet-name>
        <servlet-class>.showBooksFromREST</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCommentServlet</servlet-name>
        <servlet-class>ControlComment.AddCommentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClientBorrowBook</servlet-name>
        <servlet-class>ControlBorrow.ClientBorrowBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showBooksFromREST</servlet-name>
        <url-pattern>/showBooksFromREST</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCommentServlet</servlet-name>
        <url-pattern>/AddCommentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClientBorrowBook</servlet-name>
        <url-pattern>/ClientBorrowBook</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
